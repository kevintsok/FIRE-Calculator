.container {
  padding: 20px;
}

.input-section {
  margin-bottom: 30px;
}

.input-group {
  margin-bottom: 20px;
}

.label {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
}

input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  box-sizing: border-box;
}

.special-years {
  margin-bottom: 30px;
}

.title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 15px;
}

.add-btn {
  color: #07c160;
  font-size: 14px;
  padding: 8px 0;
  text-align: center;
  border: 1px dashed #07c160;
  border-radius: 4px;
  margin-bottom: 15px;
}

.special-year-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.special-year-item picker {
  flex: 1;
  margin-right: 10px;
}

.special-year-item input {
  flex: 1;
  margin-right: 10px;
}

.delete-btn {
  color: #ff4d4f;
  font-size: 12px;
  padding: 4px 8px;
  border: 1px solid #ff4d4f;
  border-radius: 4px;
}

.calculate-btn {
  background-color: #07c160;
  color: #fff;
  border-radius: 4px;
  margin-top: 20px;
}

.picker {
  height: 40px;
  line-height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
}
