.container {
  padding: 20px;
}

.key-metrics {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30px;
}

.metric-item {
  flex: 1;
  text-align: center;
  padding: 15px;
  background: #f5f5f5;
  border-radius: 8px;
  margin: 0 5px;
}

.label {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
}

.value {
  font-size: 18px;
  font-weight: bold;
  color: #07c160;
}

.chart-section {
  margin-bottom: 30px;
}

.title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 15px;
}

.chart {
  width: 100%;
  height: 200px;
}

.data-section {
  margin-bottom: 20px;
}

.data-table {
  max-height: 300px;
  border: 1px solid #eee;
  border-radius: 8px;
  padding: 10px;
}

.table-row {
  display: flex;
  padding: 8px 0;
  border-bottom: 1px solid #eee;
}

.table-row.header {
  font-weight: bold;
  background: #f5f5f5;
}

.col {
  flex: 1;
  text-align: center;
}
